<% modal ||= false %>
<% remote = modal ? true : false %>
<%= form_for @resource, remote: remote, html: {class: "form-inline", role: :form, 'data-model' => 'resource', id: "new_resource_form"} do |f| %>
  <% if flash[:error] %>
    <div class="notice">
      <% flash[:error].each do |error| %>
        <p> <%= error %> </p>
      <% end %>
    </div>
  <% end %>

  <div class="form-group" id="new_resource_body">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
    <%= f.label :link %>
    <%= f.text_field :link, class: "form-control" %>
    <%= f.hidden_field :group_id, value: group_id %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <p></p>
  <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>