<h3>All Groups</h3>

<%= link_to "Add New Group", new_group_path %>

<ul>
<% @groups.each do |group| %>
  <li><%= link_to group.topic, group_path(group) %> | <%= button_to "delete", group, method: :delete %> | <%= button_to "Join Group", {controller: "users", action: "join_group", group_id: group.id}, {method: :post} %><%= button_to "Leave Group", {controller: "users", action: "leave_group", group_id: group.id}, {method: :delete} %></li>
<% end %>
</ul>

