<h3>Group Topic: <%= @group.topic %></h3>
<p>Description: <%= @group.description %></p>

<h4>Resources</h4>
<ul>
  <% @group.resources.each do |resource| %>
    <li><%= link_to resource.title, resource %>:
    <%= link_to "#{resource.link}", resource.link %></li>
    <ul> 
      <% resource.favorites.each do |favorite| %>
        <li><%= favorite.user.gmail_name %> likes this</li>
      <% end %>
    </ul>
      <%= button_to "Favorite", favorite_path(:resource => resource) %></li>
  <% end %>
</ul>

<h4>Group Members</h4>
<ul>
  <% @group.users.each do |user| %>
    <li><%= user.gmail_name %></li>
  <% end %>
</ul>

<%= button_to "delete", @group, method: :delete %>

<h3>Add New Resource</h3>

<%= render 'resources/form', group_id: @group.id %>