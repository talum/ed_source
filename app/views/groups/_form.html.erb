<%= form_for @group do |f| %>
<div class="field form-group">
  <%= f.label :topic %>
  <%= f.text_field :topic, class: 'form-control' %>
</div>
<div class="field form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control' %>
</div>
  <%= f.submit "Add Group", class: "btn btn-default" %>
<% end %>