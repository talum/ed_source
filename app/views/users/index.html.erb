<h3>Users</h3>
<div class="row">
  <div class="col-md-6">
    <table class="table table-striped">
      <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.gmail_name, user %></td>
        <td><%= link_to "Add friend", friendships_path(:friend_id => user), :method => :post, class: "btn btn-xs btn-info" %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>