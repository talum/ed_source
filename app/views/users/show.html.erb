<div class="row">
  <div class="col-md-4">
    <h3>User Profile</h3>
    <p>Name: <%= current_user.gmail_name %></p>
    <%= image_tag(current_user.image, size: "140", class: "img-circle") %>
    <p>Groups:<br>
      <ul>
        <% current_user.groups.each do |group| %>
          <li><%= link_to group.topic, group_path(group) %></li>
        <% end %>
      </ul>
    </p>
  </div>
  <div class="col-md-4">
    <%= render 'shared/activities' %>
  </div>
  <div class="col-md-4">
  </div>
</div>